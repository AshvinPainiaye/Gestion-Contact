{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
  <div class="row center">
    <div class="col s12 m6 offset-m3">
      <h1 class="center">Joindre un fichier</h1>

      {{ form_start(form) }}

      <div class="row">
        <div class="file-field input-field">
          <div class="btn-floating btn-large waves-effect waves-light tooltipped" type="submit" data-position="bottom" data-delay="50" data-tooltip="Fichier joint" style="width:45px !important">
            <i class="material-icons" style="top:-4px !important; position: relative;">attach_file</i>
            {{ form_widget(form.imageFile) }}
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
        </div>
      </div>

      <div class="row center">
        <button class="btn waves-effect waves-light" type="submit" name="action">Envoyer
          <i class="material-icons right">send</i>
        </button>
      </div>

      {{ form_end(form) }}
    </div>
  </div>
</div>

{% endblock %}
