{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
  <div class="row">
    <h1 class="center">Fiche contact</h1>

    <div class="col s12 m8 offset-m2">
      <div class="card">
        <div class="card-content">
          <span class="card-title">{{ contact.nom }} {{ contact.prenom }}</span>
          <ul>
            <li><strong>Adresse email:</strong> {{ contact.email }}</li>
            <li><strong>Numéro de téléphone:</strong> {{ contact.telephone }}</li>
            <li><strong>Commentaire:</strong> {{ contact.commentaire }}</li>
            <br>

            <li>
              <strong>Fichiers associés: </strong>
              <br>
              <ul>
                {% for fichier in fichiers %}
                <li>
                  - <a href="{{ asset('contact/fichier/')~  fichier.imageName }}" target="_blank"> {{ fichier.imageName }} </a>
                </li>
                {% endfor %}
              </ul>
            </li>

          </ul>
        </div>
        <div class="card-action">
          <a href="{{ path('contact_edit', { 'id': contact.id }) }}" class="btn-floating red"><i class="material-icons">edit</i></a>
          <a href="{{ path('contact_fichier', { 'id': contact.id }) }}" class="btn-floating blue"><i class="material-icons">attach_file</i></a>
        </div>
      </div>
    </div>
  </div>

</div>
</div>


{% endblock %}
