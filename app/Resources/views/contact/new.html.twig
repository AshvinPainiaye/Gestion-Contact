{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
  <div class="row">
    <div class="col s12 m8 offset-m2">

      <h1 class="center">Nouveau contact</h1>
      {{ form_start(form) }}

      <div class="row">
        <div class="input-field col s12 m10 offset-m1">
          {{ form_label(form.nom) }}
          {{ form_widget(form.nom, {'attr':{'class':'validate'}}) }}
          {{ form_errors(form.nom) }}
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12 m10 offset-m1">
          {{ form_label(form.prenom) }}
          {{ form_widget(form.prenom, {'attr':{'class':'validate'}}) }}
          {{ form_errors(form.prenom) }}
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12 m10 offset-m1">
          {{ form_label(form.email) }}
          {{ form_widget(form.email, {'attr':{'class':'validate'}}) }}
          {{ form_errors(form.email) }}
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12 m10 offset-m1">
          {{ form_label(form.telephone) }}
          {{ form_widget(form.telephone, {'attr':{'class':'validate'}}) }}
          {{ form_errors(form.telephone) }}
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12 m10 offset-m1">
          {{ form_label(form.commentaire) }}
          {{ form_widget(form.commentaire, {'attr':{'class':'validate materialize-textarea'}}) }}
          {{ form_errors(form.commentaire) }}
        </div>
      </div>

      <div class="row center">
        <button class="btn waves-effect waves-light" type="submit" name="action">Creer
          <i class="material-icons right">send</i>
        </button>
      </div>

      {{ form_end(form) }}

    </div>
  </div>
</div>

{% endblock %}
