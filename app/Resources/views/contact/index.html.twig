{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
  <div class="row">
    <h1 class="center">Liste des contacts</h1>

    {% for contact in contacts %}

    <div class="col s12 m4">
      <a href="{{ path('contact_show', { 'id': contact.id }) }}">
        <div class="card">
          <div class="card-content">
            <ul>
              <li>{{ contact.nom }} {{ contact.prenom }}</li>
              <li>{{ contact.email }}</li>
              <li>{{ contact.telephone }}</li>
            </ul>
          </div>
          <div class="card-action">
            {{ contact.date|date("d/m/Y") }}
          </div>
        </div>
      </a>
    </div>

    {% endfor %}

    <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
      <a href="{{ path('contact_new') }}" class="btn-floating btn-large red">
        <i class="large material-icons">add</i>
      </a>
    </div>

  </div>
</div>

{% endblock %}
