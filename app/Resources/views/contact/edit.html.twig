{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
  <div class="row">
    <h1 class="center">Editer</h1>

    {{ form_start(edit_form) }}

    <div class="row">
      <div class="input-field col s12 m10 offset-m1">
        {{ form_label(edit_form.nom) }}
        {{ form_widget(edit_form.nom, {'attr':{'class':'validate'}}) }}
        {{ form_errors(edit_form.nom) }}
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12 m10 offset-m1">
        {{ form_label(edit_form.prenom) }}
        {{ form_widget(edit_form.prenom, {'attr':{'class':'validate'}}) }}
        {{ form_errors(edit_form.prenom) }}
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12 m10 offset-m1">
        {{ form_label(edit_form.email) }}
        {{ form_widget(edit_form.email, {'attr':{'class':'validate'}}) }}
        {{ form_errors(edit_form.email) }}
      </div>
    </div>


    <div class="row">
      <div class="input-field col s12 m10 offset-m1">
        {{ form_label(edit_form.telephone) }}
        {{ form_widget(edit_form.telephone, {'attr':{'class':'validate'}}) }}
        {{ form_errors(edit_form.telephone) }}
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12 m10 offset-m1">
        {{ form_label(edit_form.commentaire) }}
        {{ form_widget(edit_form.commentaire, {'attr':{'class':'validate materialize-textarea'}}) }}
        {{ form_errors(edit_form.commentaire) }}
      </div>
    </div>


    <div class="row center">
      <button class="btn waves-effect waves-light" type="submit" name="action">Editer
        <i class="material-icons right">send</i>
      </button>
    </div>

    {{ form_end(edit_form) }}

    {{ form_start(delete_form) }}
    <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
      <button class="btn-floating btn-large red" type="submit">
        <i class="large material-icons">delete</i>
      </button>
    </div>
    {{ form_end(delete_form) }}


  </div>
</div>

{% endblock %}
